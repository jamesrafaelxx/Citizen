<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    style="@style/ScreenBackground"
    tools:context=".update_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/activity_nurse_pc_toolbar"/>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/CardBackground"
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:orientation="vertical">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="First Name:"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins"
                            style="@style/TexColor"/>

                        <EditText
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_box_edittext"
                            android:hint="Enter First Name"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Last Name:"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins"
                            style="@style/TexColor"/>

                        <EditText
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_box_edittext"
                            android:drawablePadding="8dp"
                            android:hint="Enter Last Name"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Birthday:"
                            style="@style/TexColor"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins" />

                        <EditText
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_box_edittext"
                            android:drawablePadding="8dp"
                            android:hint="Enter Birthday (YYYY-MM-DD)"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Age:"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins"
                            style="@style/TexColor"/>

                        <EditText
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_box_edittext"
                            android:drawablePadding="8dp"
                            android:hint="Enter Age "
                            android:textSize="16sp"
                            android:padding="12dp"
                            style="@style/TexColor"
                            android:textColorHighlight="@color/cardview_dark_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Sex:"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins"
                            style="@style/TexColor"/>

                        <EditText
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_box_edittext"
                            android:hint="Enter Sex (Male or Female)"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:text="Confrim Password"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:fontFamily="@font/poppins"
                            style="@style/TexColor"/>

                        <EditText
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_box_edittext"
                            android:hint="Enter Password"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/update_btn"
                            android:layout_width="320dp"
                            android:layout_height="60dp"
                            android:backgroundTint="@color/pink"
                            android:text="Update Records"
                            style="@style/BtnTexColor"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/bck_btn"
                            style="@style/BtnTexColor"
                            android:layout_width="320dp"
                            android:layout_height="60dp"
                            android:backgroundTint="@color/pink"
                            android:onClick="opencitizen_profile_pi"
                            android:text="Go Back!"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>